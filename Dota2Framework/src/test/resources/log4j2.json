{
    "configuration": {
        "status": "error",
        "name": "JSONConfigDemo",
        "packages": "com.howtodoinjava",
        "ThresholdFilter": {
            "level": "debug"
        },
    "appenders": {
        "Console": {
            "name": "STDOUT",
            "PatternLayout": {
                "pattern": "%d [%t] %-5p %c - %m%n"
            }
        }
    },
    "loggers": {
        "root": {
            "level": "debug",
            "AppenderRef": {
                "ref": "STDOUT"
                }
            }
        }
    }
}